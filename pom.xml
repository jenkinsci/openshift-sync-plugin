      <version>1145.v7f2433caa07f</version>
    </dependency>
    <dependency>
      <groupId>org.jenkins-ci.plugins</groupId>
      <artifactId>branch-api</artifactId>
      <version>2.1044.v2c007e51b_87f</version>
    </dependency>
    <dependency>
